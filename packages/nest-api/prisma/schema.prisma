generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type TriviaQuestions {
  answer   String
  options  String[]
  question String
}

model Trivia {
  id        String            @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime          @db.Date
  isActive  Boolean
  questions TriviaQuestions[]
  title     String
  userId    String            @db.ObjectId
}

model TriviaQuestion {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model TriviaSettings {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model UserDashboard {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @db.Date
  email     String   @unique
  password  String
  userType  String
  username  String
}

model logs {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
