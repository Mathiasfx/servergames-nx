# Multi-stage build
FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY packages/nest-api/package*.json ./packages/nest-api/
COPY packages/nest-api/tsconfig.json ./packages/nest-api/

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY packages/nest-api/src ./packages/nest-api/src
COPY packages/nest-api/webpack.config.js ./packages/nest-api/

# Build the application
WORKDIR /app/packages/nest-api
RUN npm run build

# Production stage
FROM node:18-alpine AS production

WORKDIR /app

# Copy built application
COPY --from=builder /app/packages/nest-api/dist ./dist
COPY --from=builder /app/packages/nest-api/package*.json ./

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nestjs -u 1001

USER nestjs

EXPOSE 3007

CMD ["node", "dist/main.js"]